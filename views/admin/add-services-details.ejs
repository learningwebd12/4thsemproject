<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <form action="/admin/services-details/add" method="POST" enctype="multipart/form-data">
    <label for="service">Select Service:</label>
    <select name="service" required>
      <% services.forEach(service => { %>
        <option value="<%= service._id %>"><%= service.name %></option>
      <% }); %>
    </select>
  
    <label for="image">Upload Image:</label>
    <input type="file" name="image" accept="image/*" required />
  
    <label for="description">Description:</label>
    <textarea name="description" required></textarea>
  
    <label for="features">Features (comma-separated, max 5):</label>
    <input type="text" name="features" required />
  
    <label for="price">Price:</label>
    <input type="number" name="price" required />
  
    <button type="submit">Add Service Details</button>
  </form>
  
  
</body>
</html>